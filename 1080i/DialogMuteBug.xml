<window>
    <defaultcontrol>-</defaultcontrol>
    <zorder>5</zorder>
    <controls>
        <control type="group">
        	<animation effect="slide" end="0,20" condition="Skin.HasSetting(osd.topitems)">Conditional</animation>
            <visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
            <include>OSDClockAnimation</include>
            <posy>-30</posy>
			<posx>1670</posx>
			<control type="group">
				<control type="image">
					<posx>0</posx>
					<posy>4</posy>
					<width>250</width>
					<height>110</height>
					<bordertexture border="40">arctic/common/border-20.png</bordertexture>
					<bordersize>20</bordersize>
					<texture border="25">arctic/common/whitepanel8.png</texture>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>mod-osdbar</colordiffuse>
					<visible>!Skin.HasSetting(osd.darkpanel)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>4</posy>
					<width>250</width>
					<height>110</height>
					<bordertexture border="40">arctic/common/border-20.png</bordertexture>
					<bordersize>20</bordersize>
					<texture border="25">arctic/common/whitepanel8.png</texture>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>mod-infotags-d</colordiffuse>
					<visible>Skin.HasSetting(osd.darkpanel)</visible>
				</control>
			</control>
			<control type="label">
				<description>Mute Label</description>
				<posx>28</posx>
				<posy>43</posy>
				<width>150</width>
				<label>42440</label>
				<font>Font-Alaska-S28-L</font>
				<textcolor>$VAR[osd.text.dark]</textcolor>
				<shadowcolor>1a000000</shadowcolor>
				<align>center</align>
				<scroll>No</scroll>
			</control>
            <control type="image">
                <description>Mute image</description>
                <posx>145</posx>
                <posy>13</posy>
                <width>90</width>
                <height>90</height>
                <texture>overlays/volume/muted.png</texture>
                <colordiffuse>$VAR[osd.text.normal]</colordiffuse>
                <aspectratio aligny="center">keep</aspectratio>
            </control>
        </control>
    </controls>
</window>