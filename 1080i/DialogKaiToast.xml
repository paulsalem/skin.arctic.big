<window>
    <defaultcontrol>-</defaultcontrol>
    <zorder>10</zorder>
    <controls>
        <control type="label" id="401">
            <description>Line 1</description>
            <font>-</font>
        </control>
        <control type="label" id="402">
            <description>Line 2</description>
            <font>-</font>
        </control>
        <!-- Default notification -->
        <control type="group">
            <posx>1745</posx>
            <posy>26</posy>
            <include>BannerListInfoAnimation</include>
            <visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation) + !Window.IsVisible(startup)</visible>
            <animation effect="slide" end="-76" time="300" tween="sine" easing="inout" condition="Window.IsActive(busydialog)">Conditional</animation>
            <animation type="Conditional" condition="Window.IsActive(volumebar)">
                <effect type="fade" start="100" end="8" tween="sine" easing="out" time="300" /> 
                <effect type="zoom" start="100" end="50" center="1745,100" tween="sine" easing="inout" time="300" />
            </animation>
            <control type="group">
                <control type="label">
                    <description>Line 1</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>750</width>
                    <height>120</height>
                    <label>$INFO[Control.GetLabel(401)]</label>
                    <font>Font-Alaska-S36-BL</font>
                    <textcolor>$VAR[NowPlayingColor]</textcolor>
                    <scroll>false</scroll>
                    <align>right</align>
                    <animation effect="slide" end="0,16" time="300" tween="sine" easing="inout" condition="IsEmpty(Control.GetLabel(402))">Conditional</animation>
                </control>
                <control type="label">
                    <description>Line 2</description>
                    <posx>0</posx>
                    <posy>33</posy>
                    <width>750</width>
                    <height>120</height>
                    <label>$INFO[Control.GetLabel(402)]</label>
                    <font>Font-Alaska-S28-L</font>
                    <textcolor>$VAR[NowPlayingColorLight]</textcolor>
                    <scroll>false</scroll>
                    <align>right</align>
                </control>
                <control type="image" id="400">
                    <description>Icon</description>
                    <posx>20</posx>
                    <posy>46</posy>
                    <width>59</width>
                    <height>59</height>
                    <aspectratio>scale</aspectratio>
                    <texture>dialogs/kaitoast/info.png</texture>
                    <animation effect="fade" start="65" end="100" time="500" tween="sine" easing="in" pulse="true" condition="true">Conditional</animation>
                </control>
                <control type="image" id="403">
                    <description>Info</description>
                    <posx>20</posx>
                    <posy>46</posy>
                    <width>59</width>
                    <height>59</height>
                    <aspectratio>keep</aspectratio>
                    <visible>false</visible>
                    <texture>dialogs/kaitoast/info.png</texture>
                </control>
                <control type="image" id="404">
                    <description>Warning</description>
                    <posx>20</posx>
                    <posy>46</posy>
                    <width>59</width>
                    <height>59</height>
                    <aspectratio>keep</aspectratio>
                    <visible>false</visible>
                    <texture>dialogs/kaitoast/warning.png</texture>
                </control>
                <control type="image" id="405">
                    <description>Error</description>
                    <posx>20</posx>
                    <posy>46</posy>
                    <width>59</width>
                    <height>59</height>
                    <aspectratio>keep</aspectratio>
                    <visible>false</visible>
                    <texture>dialogs/kaitoast/error.png</texture>
                </control>
            </control>
        </control>
        <control type="group">
        	<posx>75</posx>
        	<posy>-46</posy>
			<include>BannerListInfoAnimation</include>
			<visible>Window.IsActive(fullscreenvideo) | [Window.IsActive(visualisation) + Skin.HasSetting(OSDMusicAlt.Enabled)]</visible>
			<animation effect="slide" end="-240" time="300" tween="sine" easing="inout" condition="Window.IsActive(volumebar) | Player.Muted | substring(Player.Volume,-60.0)">Conditional</animation>
			
			<control type="group">
				<control type="image">
					<posx>1295</posx>
					<posy>36</posy>
					<width>560</width>
					<height>120</height>
					<bordertexture border="40">arctic/common/border-20.png</bordertexture>
					<bordersize>20</bordersize>
					<texture border="25">arctic/common/whitepanel8.png</texture>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>mod-osdbar</colordiffuse>
					<visible>!Skin.HasSetting(osd.darkpanel)</visible>
				</control>
				<control type="image">
					<posx>1295</posx>
					<posy>36</posy>
					<width>560</width>
					<height>120</height>
					<bordertexture border="40">arctic/common/border-20.png</bordertexture>
					<bordersize>20</bordersize>
					<texture border="25">arctic/common/whitepanel8.png</texture>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>mod-infotags-d</colordiffuse>
					<visible>Skin.HasSetting(osd.darkpanel)</visible>
				</control>
			</control>
			<control type="label">
				<posx>1715</posx>
				<posy>66</posy>
				<width>375</width>
				<height>34</height>
				<font>Font-Alaska-S34-BL</font>
				<align>right</align>
				<textcolor>$VAR[osd.text.dark]</textcolor>
				<label>$INFO[Control.GetLabel(401)]</label>
				<scroll>false</scroll>
				<animation effect="slide" end="0,14" time="300" tween="sine" easing="inout" condition="IsEmpty(Control.GetLabel(402))">Conditional</animation>
			</control>
			<control type="label">
				<posx>1715</posx>
				<posy>96</posy>
				<width>375</width>
				<height>34</height>
				<font>Font-Alaska-S28-L</font>
				<align>right</align>
				<textcolor>$VAR[osd.text.dark]</textcolor>
				<label>$INFO[Control.GetLabel(402)]</label>
				<scroll>false</scroll>
			</control>
			<control type="image" id="400">
				<description>Icon</description>
				<posx>1748</posx>
				<posy>68</posy>
				<width>58</width>
				<height>58</height>
				<aspectratio>keep</aspectratio>
				<texture>overlays/notification/info-vf.png</texture>
				<animation effect="fade" start="65" end="100" time="500" tween="sine" easing="in" pulse="true" condition="true">Conditional</animation>
			</control>
			<control type="image" id="403">
				<description>Info</description>
				<posx>1748</posx>
				<posy>89</posy>
				<width>58</width>
				<height>58</height>
				<aspectratio>keep</aspectratio>
				<visible>false</visible>
				<texture>overlays/notification/info-vf.png</texture>
			</control>
			<control type="image" id="404">
				<description>Warning</description>
				<posx>1748</posx>
				<posy>89</posy>
				<width>58</width>
				<height>58</height>
				<aspectratio>keep</aspectratio>
				<visible>false</visible>
				<texture>overlays/notification/warning-vf.png</texture>
			</control>
			<control type="image" id="405">
				<description>Error</description>
				<posx>1748</posx>
				<posy>89</posy>
				<width>58</width>
				<height>58</height>
				<aspectratio>keep</aspectratio>
				<visible>false</visible>
				<texture>overlays/notification/error-vf.png</texture>
			</control>
		</control>
    </controls>
</window>